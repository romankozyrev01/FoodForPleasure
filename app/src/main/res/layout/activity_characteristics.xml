<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CharacteristicsActivity">

    <ImageView
            android:layout_width="381dp"
            android:layout_height="288dp" app:srcCompat="@android:drawable/dark_header"
            android:id="@+id/imageView_DarcBackGround2"
            android:background="#80000000" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.155"/>
    <TextView
            android:text="Укажите свои данные"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView_EnterYourSpecifications"
            android:textColor="@android:color/white" android:textSize="24sp" android:fontFamily="sans-serif-thin"
            android:textStyle="bold" app:layout_constraintTop_toTopOf="@+id/imageView_DarcBackGround2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_DarcBackGround2"
            app:layout_constraintEnd_toEndOf="@+id/imageView_DarcBackGround2"
            app:layout_constraintStart_toStartOf="@+id/imageView_DarcBackGround2"
            app:layout_constraintVertical_bias="0.082"/>
    <TextView
            android:text="Food For Pleasure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textBox_ApplicationName"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/white" android:textSize="24sp" android:fontFamily="sans-serif-thin"
            app:layout_constraintVertical_bias="0.022"
            android:textStyle="bold" app:layout_constraintHorizontal_bias="0.497"/>
    <EditText
            android:textColorHint="@android:color/white"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_UserHeight"
            android:hint="Введите ваш рост" android:textStyle="bold"
            android:textSize="24sp" android:fontFamily="sans-serif-thin"
            app:layout_constraintStart_toStartOf="@+id/imageView_DarcBackGround2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_DarcBackGround2"
            app:layout_constraintTop_toTopOf="@+id/imageView_DarcBackGround2"
            app:layout_constraintEnd_toEndOf="@+id/imageView_DarcBackGround2"
            app:layout_constraintHorizontal_bias="0.483" app:layout_constraintVertical_bias="0.429"
            android:textColor="@android:color/white"/>
    <Button
            android:text="@string/process"
            android:layout_width="184dp"
            android:onClick="submitRegistrationFinal"
            android:layout_height="66dp" android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.622" android:textColor="@android:color/white"
            android:textStyle="bold" android:textSize="24sp" android:fontFamily="sans-serif-thin"
            android:backgroundTint="#80000000"/>
    <EditText
            android:textColorHint="@android:color/white"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText_UserWeight"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.359" app:layout_constraintHorizontal_bias="0.491"
            android:textSize="24sp" android:fontFamily="sans-serif-thin" android:textColor="@android:color/white"
            android:hint="Введите ваш вес" android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>