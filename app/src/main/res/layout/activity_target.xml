<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserTargetActivity" android:backgroundTint="#00000000">

    <ImageView
            android:src="@drawable/bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop" android:backgroundTint="#00000000" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" android:background="#00000000"/>
    <ImageButton
            android:layout_width="354dp"
            android:id="@+id/submitButton2"
            android:layout_gravity="center"
            android:layout_height="101dp" app:srcCompat="@drawable/btn"
            android:background="#00000000" android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5" app:layout_constraintHorizontal_bias="0.491"
            android:layout_marginBottom="112dp" app:layout_constraintTop_toBottomOf="@+id/submitButton3"
            app:layout_constraintVertical_bias="0.631"/>
    <ImageButton
            android:layout_width="354dp"
            android:id="@+id/submitButton3"
            android:layout_gravity="center"
            android:layout_height="101dp" app:srcCompat="@drawable/btn"
            android:background="#00000000" android:scaleType="fitCenter"
            app:layout_constraintTop_toBottomOf="@+id/submitButton4"
            app:layout_constraintStart_toStartOf="@+id/imageView5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintVertical_bias="0.178"/>
    <ImageButton
            android:layout_width="354dp"
            android:id="@+id/submitButton4"
            android:layout_gravity="center"
            android:layout_height="101dp" app:srcCompat="@drawable/btn"
            android:background="#00000000" android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5" app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintVertical_bias="0.192"/>
    <Button
            android:text="Сбросить вес"
            android:layout_width="298dp"
            android:onClick="submitLoseWeight"
            android:layout_height="60dp" android:id="@+id/buttonLoseWeight" android:textStyle="bold"
            android:textSize="24sp" android:textColor="@android:color/black"
            android:fontFamily="@font/lemon111" android:backgroundTint="#00000000"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBottom_toBottomOf="@+id/submitButton4"
            app:layout_constraintTop_toTopOf="@+id/submitButton4"
            app:layout_constraintEnd_toEndOf="@+id/submitButton4"
            app:layout_constraintStart_toStartOf="@+id/submitButton4"
            app:layout_constraintVertical_bias="0.292"/>
    <Button
            android:text="Поддержание веса"
            android:onClick="submitMainWeight"
            android:layout_width="298dp"
            android:layout_height="60dp" android:id="@+id/buttonGainMuscleMass" android:textSize="24sp"
            android:fontFamily="@font/lemon111" android:textColor="@android:color/black"
            android:textStyle="bold" android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:backgroundTint="#00000000"
            app:layout_constraintBottom_toBottomOf="@+id/submitButton3"
            app:layout_constraintTop_toTopOf="@+id/submitButton3"
            app:layout_constraintEnd_toEndOf="@+id/submitButton3"
            app:layout_constraintStart_toStartOf="@+id/submitButton3" app:layout_constraintVertical_bias="0.341"/>
    <Button
            android:text="Набрать вес"
            android:onClick="submitGainWeight"
            android:layout_width="298dp"
            android:layout_height="60dp" android:id="@+id/buttonGainWeight" android:textStyle="bold"
            android:textColor="@android:color/black" android:textSize="24sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:backgroundTint="#00000000"
            android:fontFamily="@font/lemon111"
            app:layout_constraintBottom_toBottomOf="@+id/submitButton2"
            app:layout_constraintTop_toTopOf="@+id/submitButton2"
            app:layout_constraintStart_toStartOf="@+id/submitButton2"
            app:layout_constraintEnd_toEndOf="@+id/submitButton2"
            app:layout_constraintVertical_bias="0.365"/>
</androidx.constraintlayout.widget.ConstraintLayout>