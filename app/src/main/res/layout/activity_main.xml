            app:layout_constraintTop_toBottomOf="@+id/DailyProteins" app:layout_constraintVertical_bias="0.75"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/UserFats"
            android:textColor="@android:color/black" android:textSize="24sp" android:fontFamily="@font/lemon111"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_Dark"
