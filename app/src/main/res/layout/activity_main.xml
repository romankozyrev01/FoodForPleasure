            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/UserCalories"
            android:textColor="@android:color/black" android:textSize="24sp" android:fontFamily="@font/lemon111"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/imageView_Dark"
            app:layout_constraintHorizontal_bias="0.327"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_Dark"
            app:layout_constraintVertical_bias="0.089" app:layout_constraintEnd_toStartOf="@+id/TextView_From"
            app:layout_constraintTop_toBottomOf="@+id/TextView_Calories"/>
    <Button
            android:text="Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settingsButton"
            android:onClick="onSettingsButtonClick"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="476dp"/>
