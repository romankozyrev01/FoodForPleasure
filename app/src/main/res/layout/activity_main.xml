    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/DailyCarbohydrates"
            android:textColor="@android:color/black" android:textSize="24sp" android:fontFamily="@font/lemon111"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/imageView_Dark"
            app:layout_constraintEnd_toEndOf="@+id/imageView_Dark"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_Dark"
            app:layout_constraintVertical_bias="0.24"
            app:layout_constraintTop_toBottomOf="@+id/TextView_Сarbohydrates"
    />
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/DailyFats"
            android:textColor="@android:color/black" android:textSize="24sp" android:fontFamily="@font/lemon111"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/imageView_Dark"
            app:layout_constraintEnd_toEndOf="@+id/imageView_Dark"
