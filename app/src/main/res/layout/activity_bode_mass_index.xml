<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BodeMassIndexesActivity">

    <ImageView
            android:src="@drawable/bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageButton
            android:src="@drawable/btn"
            android:layout_width="371dp"
            android:onClick="submit"
            android:layout_height="98dp" android:id="@+id/imageButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="#00000000" app:layout_constraintVertical_bias="0.25"
            android:layout_marginBottom="40dp"/>
    <ImageView
            android:layout_width="375dp"
            android:layout_height="400dp" app:srcCompat="@android:drawable/dark_header"
            android:id="@+id/DarkBack5"
            android:background="#B3000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.234" android:backgroundTint="#33000000"
            app:layout_constraintBottom_toTopOf="@+id/imageButton"
            app:layout_constraintTop_toBottomOf="@+id/textBox_CustomerBMI"
            app:layout_constraintHorizontal_bias="0.444"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/userBreitmanIndex"
            app:layout_constraintEnd_toEndOf="@+id/DarkBack5" app:layout_constraintStart_toStartOf="@+id/DarkBack5"
            app:layout_constraintTop_toTopOf="@+id/DarkBack5" app:layout_constraintBottom_toBottomOf="@+id/DarkBack5"
            android:textColor="@android:color/black" android:textSize="24sp" android:fontFamily="@font/lemon111"
            app:layout_constraintVertical_bias="0.098"
            android:textStyle="bold" app:layout_constraintHorizontal_bias="0.91"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/userNoordenIndex"
            app:layout_constraintEnd_toEndOf="@+id/DarkBack5" app:layout_constraintStart_toStartOf="@+id/DarkBack5"
            app:layout_constraintBottom_toBottomOf="@+id/DarkBack5"
            android:textColor="@android:color/black" android:textSize="24sp" android:fontFamily="@font/lemon111"
            app:layout_constraintVertical_bias="0.108"
            android:textStyle="bold" app:layout_constraintHorizontal_bias="0.91"
            app:layout_constraintTop_toBottomOf="@+id/userBreitmanIndex"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/userTatonIndex"
            android:textColor="@android:color/black" android:textSize="24sp" android:fontFamily="@font/lemon111"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/DarkBack5"
            app:layout_constraintTop_toBottomOf="@+id/userNoordenIndex" app:layout_constraintVertical_bias="0.171"
            app:layout_constraintStart_toStartOf="@+id/DarkBack5" app:layout_constraintEnd_toEndOf="@+id/DarkBack5"
            app:layout_constraintHorizontal_bias="0.91"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/userMassIndex"
            android:textColor="@android:color/black" android:textSize="24sp" android:fontFamily="@font/lemon111"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/DarkBack5" app:layout_constraintBottom_toBottomOf="@+id/DarkBack5"
            android:layout_marginBottom="20dp" app:layout_constraintStart_toStartOf="@+id/DarkBack5"
            app:layout_constraintTop_toBottomOf="@+id/userBrokeIndex" app:layout_constraintHorizontal_bias="0.89"
            app:layout_constraintVertical_bias="0.702"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/userBrokeIndex"
            android:textColor="@android:color/black" android:textSize="24sp" android:fontFamily="@font/lemon111"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/DarkBack5" android:layout_marginBottom="84dp"
            app:layout_constraintStart_toStartOf="@+id/DarkBack5" app:layout_constraintEnd_toEndOf="@+id/DarkBack5"
            app:layout_constraintTop_toBottomOf="@+id/userTatonIndex" app:layout_constraintHorizontal_bias="0.91"
            app:layout_constraintVertical_bias="0.607"/>
    <TextView
            android:text="Food For Pleasure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textBox_ApplicationName"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@android:color/black" android:textSize="24sp" android:fontFamily="@font/lemon111"
            android:textStyle="bold" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2" app:layout_constraintVertical_bias="0.023"/>
    <TextView
            android:text="Ваша рекомендуемая масса тела по различным расчетам составит"
            android:layout_width="371dp"
            android:layout_height="62dp" android:id="@+id/textBox_CustomerBMI"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/black" android:textSize="24sp" android:fontFamily="@font/lemon111"
            app:layout_constraintVertical_bias="0.034"
            android:textStyle="bold" android:textAlignment="center" android:backgroundTint="#80000000"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintTop_toBottomOf="@+id/textBox_ApplicationName"/>
    <TextView
            android:text="Формула Брейтмена:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textBox_BreitmanIndex"
            android:textColor="@android:color/black" android:textSize="24sp" android:fontFamily="@font/lemon111"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/DarkBack5"
            app:layout_constraintBottom_toBottomOf="@+id/DarkBack5" app:layout_constraintTop_toTopOf="@+id/DarkBack5"
            app:layout_constraintHorizontal_bias="0.375" app:layout_constraintVertical_bias="0.098"
            app:layout_constraintEnd_toStartOf="@+id/userBreitmanIndex"/>
    <TextView
            android:text="Формула Брока:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textBox_BrokeIndex"
            android:textColor="@android:color/black" android:textSize="24sp" android:fontFamily="@font/lemon111"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/DarkBack5"
            app:layout_constraintEnd_toEndOf="@+id/DarkBack5" app:layout_constraintBottom_toBottomOf="@+id/DarkBack5"
            app:layout_constraintTop_toTopOf="@+id/DarkBack5" app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintVertical_bias="0.706"/>
    <TextView
            android:text="Формула Ноордена"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textBox_NoordenIndex"
            android:textColor="@android:color/black" android:textSize="24sp" android:fontFamily="@font/lemon111"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/userNoordenIndex"
            app:layout_constraintStart_toStartOf="@+id/DarkBack5"
            app:layout_constraintBottom_toBottomOf="@+id/DarkBack5"
            app:layout_constraintHorizontal_bias="0.205" app:layout_constraintVertical_bias="0.108"
            app:layout_constraintTop_toBottomOf="@+id/textBox_BreitmanIndex"/>
    <TextView
            android:text="ИМТ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textBox_MassIndex"
            android:textColor="@android:color/black" android:textSize="24sp" android:fontFamily="@font/lemon111"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/DarkBack5"
            app:layout_constraintBottom_toBottomOf="@+id/DarkBack5"
            android:layout_marginBottom="20dp" app:layout_constraintEnd_toStartOf="@+id/userMassIndex"
            app:layout_constraintTop_toBottomOf="@+id/textBox_BrokeIndex" app:layout_constraintHorizontal_bias="0.041"
            app:layout_constraintVertical_bias="0.702"/>
    <TextView
            android:text="Формула Татоня"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textBox_TatonIndex"
            android:textColor="@android:color/black" android:textSize="24sp" android:fontFamily="@font/lemon111"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/userTatonIndex"
            app:layout_constraintStart_toStartOf="@+id/DarkBack5"
            app:layout_constraintBottom_toBottomOf="@+id/DarkBack5" app:layout_constraintHorizontal_bias="0.125"
            android:layout_marginBottom="144dp" app:layout_constraintTop_toBottomOf="@+id/textBox_NoordenIndex"
            app:layout_constraintVertical_bias="0.513"/>
    <Button
            android:text="Далее"
            android:onClick="submit"
            android:layout_width="120dp"
            android:layout_height="56dp" android:id="@+id/submitButton"
            android:textStyle="bold"
            android:textColor="@android:color/black" android:textSize="24sp" android:fontFamily="@font/lemon111"
            android:backgroundTint="#00000000"
            app:layout_constraintTop_toTopOf="@+id/imageButton"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton"
            app:layout_constraintEnd_toEndOf="@+id/imageButton"
            app:layout_constraintVertical_bias="0.319" app:layout_constraintStart_toStartOf="@+id/imageButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>